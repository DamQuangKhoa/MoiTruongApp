<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sky.afinal.view.MainActivity">


    <Button
        android:text="Infomation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="81dp"
        android:id="@+id/btnInfo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnInfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:id="@+id/btnPerson" />

    <Button
        android:text="News"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPerson"
        android:layout_alignLeft="@+id/btnInfo"
        android:layout_alignStart="@+id/btnInfo"
        android:layout_marginTop="14dp"
        android:id="@+id/btnNew"
        android:layout_alignRight="@+id/btnInfo"
        android:layout_alignEnd="@+id/btnInfo" />

    <!--<ImageButton-->
        <!--android:id="@+id/imageButton1"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/shape_oval" />-->

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/play"
        android:background="@drawable/button_menu"
        android:layout_alignBottom="@+id/btnNew"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />

    <Button
        android:text="Post"
        android:textColor="#F5FFFA"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/btnPostFi"
        android:background="@drawable/button_menu"
        android:layout_above="@+id/btnPerson"
        android:layout_alignRight="@+id/btnPerson"
        android:layout_alignEnd="@+id/btnPerson"
        android:layout_marginBottom="34dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/lu"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/myFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="4dp"
        android:layout_alignBottom="@+id/btnPostFi"
        android:layout_alignRight="@+id/btnInfo"
        android:layout_alignEnd="@+id/btnInfo"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />

</RelativeLayout>

